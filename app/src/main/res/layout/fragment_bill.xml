<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    tools:context=".HospitalRegister.Fragment.BillFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create bill"
        android:textColor="@color/purple_500"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_below="@id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/layout_bg">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:id="@+id/field_1">
           <TextView
               android:id="@+id/count_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1."
               android:textSize="18sp"
               android:background="@drawable/edit_txt_problem_bg"
               android:padding="10dp"
               android:textStyle="bold"
               android:fontFamily="sans-serif-condensed-medium"
               android:layout_marginStart="20dp"
               tools:ignore="HardcodedText" />
           <EditText
               android:id="@+id/bill_description_1"
               android:layout_toRightOf="@id/count_1"
               android:layout_width="150dp"
               android:layout_marginStart="5dp"
               android:layout_height="wrap_content"
               android:text="General check up"
               android:fontFamily="sans-serif-condensed-medium"
               android:background="@drawable/edit_txt_problem_bg"
               android:padding="10dp"
               tools:ignore="HardcodedText" />
           <EditText
               android:id="@+id/bill_amount_1"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/bill_description_1"
               android:layout_marginStart="10dp"
               android:hint="₹ "
               android:inputType="numberDecimal"
               android:background="@drawable/edit_txt_problem_bg"
               android:padding="10dp"
               tools:ignore="RtlHardcoded" />
           <ImageView
               android:id="@+id/addField_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_add"
               android:visibility="visible"
               android:background="@drawable/view_bg"
               android:layout_toRightOf="@id/bill_amount_1"
               android:layout_marginTop="10dp"
               android:layout_marginStart="5dp"
               tools:ignore="RtlHardcoded" />
           <ImageView
               android:id="@+id/minusField_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_minus"
               android:visibility="gone"
               android:background="@drawable/view_bg"
               android:layout_toRightOf="@id/bill_amount_1"
               android:layout_marginTop="10dp"
               android:layout_marginStart="5dp"
               tools:ignore="RtlHardcoded" />
       </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/field_1"
            android:visibility="invisible"
            android:id="@+id/field_2">
            <TextView
                android:id="@+id/count_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:textSize="18sp"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/bill_description_2"
                android:layout_toRightOf="@id/count_2"
                android:layout_width="150dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:hint="Add description"
                android:fontFamily="sans-serif-condensed-medium"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/bill_amount_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@id/bill_description_2"
                android:layout_marginStart="10dp"
                android:hint="₹ "
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/addField_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:visibility="visible"
                android:background="@drawable/view_bg"
                android:layout_toRightOf="@id/bill_amount_2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/minusField_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"
                android:visibility="gone"
                android:background="@drawable/view_bg"
                android:layout_toRightOf="@id/bill_amount_2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/field_2"
            android:visibility="invisible"
            android:id="@+id/field_3">
            <TextView
                android:id="@+id/count_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="18sp"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/bill_description_3"
                android:layout_toRightOf="@id/count_3"
                android:layout_width="150dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:hint="Add description"
                android:fontFamily="sans-serif-condensed-medium"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/bill_amount_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@id/bill_description_3"
                android:layout_marginStart="10dp"
                android:hint="₹ "
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/addField_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:visibility="visible"
                android:background="@drawable/view_bg"
                android:layout_toRightOf="@id/bill_amount_3"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/minusField_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"
                android:visibility="gone"
                android:background="@drawable/view_bg"
                android:layout_toRightOf="@id/bill_amount_3"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/field_3"
            android:visibility="invisible"
            android:id="@+id/field_4">
            <TextView
                android:id="@+id/count_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4."
                android:textSize="18sp"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/bill_description_4"
                android:layout_toRightOf="@id/count_4"
                android:layout_width="150dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:hint="Add description"
                android:fontFamily="sans-serif-condensed-medium"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/bill_amount_4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bill_description_4"
                android:layout_marginStart="10dp"
                android:hint="₹ "
                android:inputType="numberDecimal"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/addField_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:visibility="visible"
                android:background="@drawable/view_bg"
                android:layout_toRightOf="@id/bill_amount_4"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/minusField_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus"
                android:visibility="gone"
                android:background="@drawable/view_bg"
                android:layout_toRightOf="@id/bill_amount_4"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/field_4"
            android:visibility="invisible"
            android:id="@+id/field_5">
            <TextView
                android:id="@+id/count_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5."
                android:textSize="18sp"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_marginStart="20dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/bill_description_5"
                android:layout_toRightOf="@id/count_5"
                android:layout_width="150dp"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:hint="Add description"
                android:fontFamily="sans-serif-condensed-medium"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/bill_amount_5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bill_description_5"
                android:layout_marginStart="10dp"
                android:hint="₹ "
                android:inputType="numberDecimal"
                android:background="@drawable/edit_txt_problem_bg"
                android:padding="10dp"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <TextView
            android:id="@+id/totalBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Total Amount : "
            android:textColor="@color/Primary_color"
            android:textStyle="bold"
            android:background="@drawable/edit_txt_problem_bg"
            android:layout_below="@id/field_5"
            android:padding="13dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnAddBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Bill"
            android:layout_below="@id/totalBill"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAllCaps="false"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText" />
        <ProgressBar
            android:id="@+id/loader"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/totalBill"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

</RelativeLayout>