<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="56dp"
    tools:context=".UserRegister.Fragment.AboutDoctorFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        app:lottie_rawRes="@raw/doctor"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/lottie"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/lottie">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="20dp"
           android:background="@drawable/layout_bg">

           <de.hdodenhof.circleimageview.CircleImageView
               android:id="@+id/doctorImg"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:src="@drawable/doctor"
               app:civ_border_width="0.8dp"/>
           <TextView
               android:id="@+id/doctorName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_toEndOf="@id/doctorImg"
               android:layout_marginStart="10dp"
               android:textStyle="bold"
               android:textColor="@color/Primary_color"
               android:textSize="20sp"
               android:fontFamily="sans-serif-condensed-medium"
               tools:ignore="HardcodedText" />
           <TextView
               android:id="@+id/doctorSpeciality"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@id/doctorImg"
               android:layout_marginStart="10dp"
               android:textStyle="bold"
               android:layout_below="@id/doctorName"
               android:textColor="@color/Primary_color"
               android:fontFamily="sans-serif-condensed-medium"
               tools:ignore="HardcodedText" />
           <TextView
               android:id="@+id/hospitalName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@id/doctorImg"
               android:layout_marginStart="10dp"
               android:textStyle="bold"
               android:layout_below="@id/doctorSpeciality"
               android:textColor="@color/Primary_color"
               android:fontFamily="sans-serif-condensed-medium"
               tools:ignore="HardcodedText" />

           <com.airbnb.lottie.LottieAnimationView
               android:id="@+id/ratingStarLottie"
               android:layout_width="100dp"
               android:layout_height="30dp"
               app:lottie_rawRes="@raw/rating_star"
               android:layout_toEndOf="@id/doctorImg"
               android:layout_marginStart="10dp"
               android:layout_below="@id/hospitalName"
               app:lottie_autoPlay="true"/>
           <TextView
               android:id="@+id/rating"
               android:layout_width="wrap_content"
               android:layout_height="30dp"
               android:text="5.0"
               android:gravity="center_vertical"
               android:textStyle="bold"
               android:textColor="@color/Primary_color"
               android:layout_toEndOf="@id/ratingStarLottie"
               tools:ignore="HardcodedText"
               android:layout_below="@id/hospitalName"/>

<!--           <com.airbnb.lottie.LottieAnimationView-->
<!--               android:id="@+id/callLottie"-->
<!--               android:layout_width="50dp"-->
<!--               android:layout_height="50dp"-->
<!--               app:lottie_rawRes="@raw/call"-->
