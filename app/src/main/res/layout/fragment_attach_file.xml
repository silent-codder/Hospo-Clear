<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="56dp"
    android:padding="20dp"
    android:background="@drawable/layout_bg"
    tools:context=".UserRegister.Fragment.AttachFileFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_below="@id/floatingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/prescription"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/edit_txt_problem_bg"
        android:layout_below="@id/floatingBtn"
        android:padding="20dp"
        android:hint="Write prescription here..."
        android:gravity="start"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload File"
        android:textStyle="bold"
        android:layout_below="@id/recycleView"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAllCaps="false"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnUploadPrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload "
        android:textStyle="bold"
        android:layout_below="@id/prescription"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAllCaps="false"
        android:visibility="gone"
        tools:ignore="HardcodedText" />


    <ProgressBar
        android:id="@+id/loader"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploading file \nPlease wait a moment \nDon't hit back button !!"
        android:layout_below="@id/loader"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#D5D7DA"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/floatingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Images"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:drawableLeft="@drawable/ic_camera"
        android:layout_margin="10dp"
        android:textSize="@dimen/text_size_small"
        tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />
  <Button
      android:id="@+id/btnTypePrescription"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Type here"
      android:visibility="invisible"
      android:layout_alignParentRight="true"
      android:layout_marginTop="10dp"
      android:textSize="@dimen/text_size_small"
      android:textStyle="bold"
      android:fontFamily="sans-serif-condensed-medium"
      android:textAllCaps="false"
      tools:ignore="HardcodedText,RtlHardcoded" />

</RelativeLayout>