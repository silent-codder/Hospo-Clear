<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    tools:context=".HospitalRegister.Fragment.BillViewFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Bill"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_large"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/purple_500"
        tools:ignore="HardcodedText" />
    <RelativeLayout
        android:id="@+id/recycleViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@+id/text"
        android:background="@drawable/layout_bg">

        <TextView
            android:id="@+id/notFoundText"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bill not available..."
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed-medium"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/BillView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/edit_txt_problem_bg">

            <TextView
                android:id="@+id/bill_description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/Primary_color"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/bill_amount_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/purple_500"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/bill_description_2"
                android:layout_below="@id/bill_description_1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/Primary_color"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/bill_amount_2"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bill_amount_1"
                android:text=""
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/purple_500"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/bill_description_3"
                android:layout_below="@id/bill_description_2"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/Primary_color"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/bill_amount_3"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"
                android:layout_below="@id/bill_amount_2"
                android:text=""
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/purple_500"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/bill_description_4"
                android:layout_below="@id/bill_description_3"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/Primary_color"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/bill_amount_4"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_height="wrap_content"
                android:layout_below="@id/bill_amount_3"
                android:text=""
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/purple_500"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/bill_description_5"
                android:textSize="@dimen/text_size_small"
                android:layout_below="@id/bill_description_4"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/Primary_color"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/bill_amount_5"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:layout_below="@id/bill_amount_4"
                android:text=""
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/purple_500"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/totalBill"
                android:textSize="@dimen/text_size_small"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/view_bg"
                android:textColor="@color/white"
                android:layout_below="@id/bill_amount_5"/>

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>