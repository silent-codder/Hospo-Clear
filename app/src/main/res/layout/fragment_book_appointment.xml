<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserRegister.Fragment.BookAppointmentFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/doctor"
        app:civ_border_width="0.8dp"
        app:civ_border_color="@color/white"
        android:id="@+id/doctor"/>
    <ProgressBar
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_margin="45dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@drawable/hospital"
        android:id="@+id/ImgLoader"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/doctor"
        android:visibility="visible"
        android:id="@+id/doctorImg"/>
    <TextView
        android:id="@+id/doctorName"
        android:layout_below="@id/doctorImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:text="Dr. Ajinkya Shinde"
        android:layout_centerHorizontal="true"
        android:textColor="@color/Primary_color"
        android:textSize="@dimen/text_size_large"
        android:fontFamily="sans-serif-condensed-medium"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/doctorSpeciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="General Physician"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_medium"
        android:layout_below="@id/doctorName"
        android:fontFamily="sans-serif-condensed-medium"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/doctorSpeciality">

        <TextView
            android:id="@+id/patient"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Patients"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/patientCount"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="+1000"
            android:gravity="center_horizontal"
            android:layout_below="@id/patient"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:textAllCaps="true"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/view1"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#939697"
            android:layout_toEndOf="@id/patient"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/rate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/view1"
            android:text="Rate"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/rating"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:layout_toEndOf="@id/view1"
            android:gravity="center_horizontal"
            android:layout_below="@id/rate"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:textAllCaps="true"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#939697"
            android:layout_toEndOf="@id/rate"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/Experience"
            android:layout_width="90dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/view2"
            android:text="Experience"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/doctorExperience"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="+17 Yr"
            android:layout_toEndOf="@id/view2"
            android:gravity="center_horizontal"
            android:layout_below="@id/rate"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />


    </RelativeLayout>

    <TextView
        android:id="@+id/schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/text_size_large"
        android:text="Schedule"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/Primary_color"
        android:layout_below="@id/details"
        tools:ignore="HardcodedText" />


    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:layout_marginTop="10dp"
        android:layout_below="@id/schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textColorNormal="@color/black"
        app:selectedDateBackground="@color/date"
        app:textColorSelected="@color/white"
        android:id="@+id/calenderView"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/calenderView"
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:padding="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/appointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(No appointment date selected)"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_centerHorizontal="true"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_below="@id/appointmentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_centerHorizontal="true"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Clearcode"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/text_size_extra_small"/>

</RelativeLayout>