<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <RelativeLayout
          android:id="@+id/relativeLayout2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp">

          <RelativeLayout
              android:id="@+id/relativeLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="40dp">

              <de.hdodenhof.circleimageview.CircleImageView
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:src="@drawable/doctors"
                  android:id="@+id/doctor"/>
              <ProgressBar
                  android:visibility="visible"
                  android:layout_width="40dp"
                  android:layout_marginTop="20dp"
                  android:layout_marginStart="20dp"
                  android:layout_height="40dp"
                  android:src="@drawable/hospital"
                  android:id="@+id/ImgLoader"/>
              <de.hdodenhof.circleimageview.CircleImageView
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:src="@drawable/doctors"
                  android:visibility="visible"
                  android:id="@+id/doctorImg"/>
              <TextView
                  android:id="@+id/doctorName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:text="Dr. Ajinkya Shinde"
                  android:textColor="@color/black"
                  android:layout_toEndOf="@id/doctorImg"
                  android:layout_marginStart="10dp"
                  android:textSize="@dimen/text_size_medium"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:textStyle="bold"
                  tools:ignore="HardcodedText" />
              <TextView
                  android:id="@+id/doctorSpeciality"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Heart Special"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:layout_marginStart="10dp"
                  android:textSize="@dimen/text_size_small"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:layout_toEndOf="@id/doctorImg"
                  android:layout_below="@id/doctorQualification"
                  tools:ignore="HardcodedText"/>
              <TextView
                  android:id="@+id/doctorExperience"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:text="Ex : 17"
                  android:textSize="@dimen/text_size_small"
                  android:layout_marginStart="5dp"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:layout_toEndOf="@id/doctorSpeciality"
                  android:layout_below="@id/doctorQualification"
                  tools:ignore="HardcodedText" />
              <TextView
                  android:id="@+id/doctorQualification"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:text="MBBS, M.Surg"
                  android:textStyle="bold"
                  android:textSize="@dimen/text_size_small"
                  android:layout_marginStart="10dp"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:layout_toEndOf="@id/doctorImg"
                  android:layout_below="@id/doctorName"
                  tools:ignore="HardcodedText" />
              <TextView
                  android:id="@+id/doctorFee"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:text="Fee : 500"
                  android:textStyle="bold|italic"
                  android:textSize="@dimen/text_size_small"
                  android:layout_marginStart="10dp"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:layout_toEndOf="@id/doctorImg"
                  android:layout_below="@id/doctorSpeciality"
                  tools:ignore="HardcodedText" />

          </RelativeLayout>

          <ImageView
              android:id="@+id/btnMenu"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:src="@drawable/ic_menu" />

      </RelativeLayout>


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp"
          android:layout_below="@id/relativeLayout2">
          <TextView
              android:id="@+id/btnBookAppointment"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Book Appointment"
              android:gravity="center"
              android:textColor="@color/white"
              android:background="@drawable/view_bg"
              android:padding="10dp"
              android:textStyle="bold"
              android:fontFamily="sans-serif-condensed-medium"
              tools:ignore="HardcodedText" />
      </RelativeLayout>

  </RelativeLayout>

</androidx.cardview.widget.CardView>