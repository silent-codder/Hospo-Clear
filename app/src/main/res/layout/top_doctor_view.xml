<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardBackgroundColor="#150441"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/doctor"
            app:civ_border_width="0.8dp"
            app:civ_border_color="@color/white"
            android:id="@+id/doctor"/>
        <ProgressBar
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_height="40dp"
            android:src="@drawable/hospital"
            android:id="@+id/ImgLoader"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/doctor"
            app:civ_border_width="0.8dp"
            android:visibility="visible"
            app:civ_border_color="@color/white"
            android:id="@+id/doctorImg"/>
        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:layout_toEndOf="@id/doctorImg"
            android:layout_marginStart="10dp"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/doctorSpeciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_toEndOf="@id/doctorImg"
            android:layout_below="@id/doctorName"
            tools:ignore="HardcodedText"/>
        <TextView
            android:id="@+id/doctorExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_toEndOf="@id/doctorSpeciality"
            android:layout_below="@id/doctorName"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/doctorQualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_toEndOf="@id/doctorImg"
            android:layout_below="@id/doctorSpeciality"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/btnBookAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:gravity="center"
            android:textColor="@color/Primary_color"
            android:background="@drawable/edit_txt_problem_bg"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_below="@id/doctorImg"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/relativeLayout">

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save"
            android:visibility="visible"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/bookmark_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_save_white"
            android:visibility="gone"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>