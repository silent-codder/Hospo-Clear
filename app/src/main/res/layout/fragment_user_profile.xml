<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="56dp"
    tools:context=".UserRegister.Fragment.UserProfileFragment">

   <TextView
       android:id="@+id/text"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Profile"
       android:textStyle="bold"
       android:fontFamily="sans-serif-condensed-medium"
       android:textColor="@color/purple_500"
       android:textSize="30sp"
       android:layout_centerHorizontal="true"
       tools:ignore="HardcodedText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/layout_bg"
        android:layout_below="@+id/text"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            app:civ_border_width="0.4dp"
            android:layout_marginTop="10dp"
            android:id="@+id/user"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            app:civ_border_width="0.4dp"
            android:layout_marginTop="10dp"
            android:id="@+id/userImg"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/Primary_color"
            android:layout_toEndOf="@id/userImg"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/userAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Primary_color"
            android:textSize="17sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_toEndOf="@id/userImg"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/userName"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/mobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userImg"
            android:layout_marginStart="20dp"
            android:textColor="@color/Primary_color"
            android:textSize="15sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_below="@+id/userAddress"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_below="@id/userImg"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#747474"
            android:layout_below="@id/btnEditProfile"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Saved"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/Primary_color"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_below="@id/view"
            android:id="@+id/saved"
            tools:ignore="HardcodedText" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/saved"
           android:gravity="center_horizontal">

           <RelativeLayout
               android:id="@+id/favDoctor"
               android:layout_width="150dp"
               android:layout_height="200dp"
               android:layout_marginTop="20dp"
               android:layout_marginEnd="20dp"
               android:background="@drawable/edit_txt_problem_bg">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/doctor"
                   app:civ_border_width="1dp"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="20dp"
                   android:id="@+id/doctorImg"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Favorite\nDoctor"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textColor="@color/Primary_color"
                   android:layout_below="@id/doctorImg"
                   android:layout_centerHorizontal="true"
                   android:textSize="20sp"
                   android:fontFamily="sans-serif-condensed-medium"
                   tools:ignore="HardcodedText" />


           </RelativeLayout>
           <RelativeLayout
               android:id="@+id/favHospital"
               android:layout_width="150dp"
               android:layout_height="200dp"
               android:layout_marginTop="20dp"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@id/favDoctor"
               android:background="@drawable/edit_txt_problem_bg">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/hospital"
                   app:civ_border_width="1dp"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="20dp"
                   android:id="@+id/hospitalImg"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Favorite\nHospital"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textColor="@color/Primary_color"
                   android:layout_below="@id/hospitalImg"
                   android:layout_centerHorizontal="true"
                   android:textSize="20sp"
                   android:fontFamily="sans-serif-condensed-medium"
                   tools:ignore="HardcodedText" />

           </RelativeLayout>

       </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>