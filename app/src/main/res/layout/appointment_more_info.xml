<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#E0F2F1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp">

        <TextView
            android:id="@+id/appointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/11/2020"
            android:textColor="@color/Primary_color"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/patientName"
            android:layout_below="@id/appointmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajinkya Shinde"
            android:textColor="@color/Primary_color"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr.Ajinkya Shinde"
            android:layout_below="@id/patientName"
            android:textColor="@color/Primary_color"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/hospitalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajinkya Hospital"
            android:layout_below="@id/doctorName"
            android:textColor="@color/Primary_color"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/hospitalName"
            android:layout_marginStart="10dp"
            android:background="@color/Primary_color"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem :"
            android:layout_toRightOf="@id/view"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/Primary_color"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <TextView
            android:id="@+id/problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view"
            android:layout_below="@id/text"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:textColor="@color/Primary_color"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>